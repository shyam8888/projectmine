@model LaboUSER.Models.tbl_Jobs
@{
    ViewBag.Title = "createjob";
    Layout = "~/Areas/user/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid full-width-container">
    <h1 class="section-title" id="services">
        <span>Create Job</span>
    </h1>
    <!-- End Title -->

    <!--breadcrum start-->
    <ol class="breadcrumb text-left">
        <li><a href="#">Jobs</a></li>
        <li class="active">Create Job</li>
    </ol>
    <!--breadcrum end-->
    <div class="section section-custom billinfo">

        <!-- section content start-->
        <form id="validationForm" action="" method="post">
            <div class="pmd-card pmd-z-depth">
                <div class="pmd-card-body">
                    <div class="group-fields clearfix row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group pmd-textfield">
                                <label for="regular1" class="control-label">
                                    Title*
                                </label>
                                @Html.TextBoxFor(model => model.JobTitle, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.JobTitle, "", new { @style = "color:red" })
                            </div>
                        </div>
                    </div>
                    <div class="group-fields clearfix row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group pmd-textfield">
                                <label class="control-label">Description*</label>
                                @Html.TextAreaFor(model => model.JobDescription, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.JobDescription, "", new { @style = "color:red" })
                            </div>
                        </div>
                    </div>
                    <div class="group-fields clearfix row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group pmd-textfield">
                                <label class="control-label">Note</label>
                                @Html.TextAreaFor(model => model.Note, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="group-fields clearfix row">
                        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group pmd-textfield">
                                <label class="control-label">Category*</label>
                                @Html.DropDownListFor(model => model.JobCategory, (IEnumerable<SelectListItem>)ViewBag.JobCategoryList, "select", new { @class = "select-with-search pmd-select2 form-control" })
                                @Html.ValidationMessageFor(model => model.JobCategory, "", new { @style = "color:red;" })
                            </div>
                        </div>
                    </div>
                    <div class="group-fields clearfix row">
                        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group pmd-textfield">
                                <label class="control-label">Company Fee</label>
                                <label><b>$@ViewBag.CompanyFee </b></label>
                                
                            </div>
                        </div>
                    </div>
                    <div class="group-fields clearfix row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group pmd-textfield">
                                <label class="control-label">Location*</label>
                                @Html.TextAreaFor(model => model.JobLocation, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.JobLocation, "", new { @style = "color:red" })
                            </div>
                        </div>
                    </div>
                    <div class="group-fields clearfix row">
                        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group pmd-textfield">
                                <label class="control-label">Timing*</label>
                                @Html.TextAreaFor(model => model.JobTiming, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.JobTiming, "", new { @style = "color:red" })
                            </div>
                        </div>
                    </div>
                    <div class="group-fields clearfix row">
                        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group pmd-textfield">
                                <label for="regular1" class="control-label">
                                    No of employee needed*
                                </label>
                                @Html.TextBoxFor(model => model.NoOfEmployeeNeeded, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NoOfEmployeeNeeded, "", new { @style = "color:red" })
                            </div>
                        </div>
                    </div>
                    <div class="group-fields clearfix row">
                        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group pmd-textfield">
                                <label for="regular1" class="control-label">
                                    Amount to pay*
                                </label>
                                @Html.TextBoxFor(model => model.Amount, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Amount, "", new { @style = "color:red" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="pmd-card-actions">
                    <button type="submit" class="btn btn-primary next">Submit</button>
                    <a href="javascript:void(0);" class="btn btn-default">Cancel</a>
                </div>
            </div>
            <!-- section content end -->
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        $(".select-with-search").select2({
            theme: "bootstrap"
        });
    })
</script>
