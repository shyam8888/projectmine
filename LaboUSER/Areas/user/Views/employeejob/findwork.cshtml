@model List<LaboUSER.Models.tbl_Jobs>
    @{
        ViewBag.Title = "findwork";
        Layout = "~/Areas/user/Views/Shared/_LayoutAdmin.cshtml";
    }



    <!--tab start-->
    <div class="container-fluid full-width-container notifications">
        <!-- Title -->
        <h1 class="section-title" id="services">
            <span>Job List</span>
        </h1>
        <!-- End Title -->
        <!--breadcrum start-->
        <ol class="breadcrumb text-left">
            <li><a href="index.html">Dashboard</a></li>
            <li class="active">Job List</li>
        </ol>
        <!--breadcrum end-->

        <div class="section section-custom" id="notifications">

            <!-- section content start-->
            <div class="section-inner">
                <div class="row">
                    <div class="col-lg-12 col-xs-12 col-sm-12 col-md-12 custom-col-12">
                        <div class="page-content notifications">
                            <ul class="list-group pmd-list-twoline">
                                @foreach (var item in Model)
                                {
                                    <li class="list-group-item unread new-day pmd-z-depth" data-date="Posted on, @Convert.ToDateTime(item.CreatedDate).ToString("MMM. dd, yyyy")">
                                        @*<div class="media-left">
                                            <a href="tml.html" class="avatar-list-img40x40">
                                                <img alt="Prathit" data-src="holder.js/40x40" class="img-responsive" src="~/themes/images/profile-1.png" data-holder-rendered="true">
                                            </a>
                                        </div>*@
                                        <div class="media-body">
                                            <span class="list-group-item-heading"> @item.JobTitle </span>
                                            <span class="list-group-item-date">Hourly - Entry Level ($) - Est. Time More than a 1 Months, 30 hrs/week </span>
                                            <span class="list-group-item-heading">@item.JobDescription</span>
                                            <span class="list-group-item-date">Number of Employee needed: @item.NoOfEmployeeNeeded</span>
                                            <span class="list-group-item-date">Location: @item.JobLocation</span>
                                            <a href="/User/employeejob/readmore/@item.Pk_JobId" class="btn pmd-btn-raised pmd-ripple-effect btn-primary" style="float: right;">Read More</a>
                                        </div>
                                    </li>
                                }

                            </ul>

                        </div>
                    </div>
                </div>
            </div>
            <!-- section content end -->
        </div>
    </div>
    <!-- tab end -->
